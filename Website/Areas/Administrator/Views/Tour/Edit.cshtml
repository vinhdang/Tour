<script type="text/javascript">
    $(document).ready(function() {
        $('#DepartureNationalID').change(function () {
            var nationalID = $(this).val();
            var province = $('#DepartureProvinceID');
            var AreaID = $('#DepartureAreaID');
            var DistrictID = $('#DepartureDistrictID');
            if (nationalID != null && nationalID != '') {
                $.getJSON('@Url.Action("SelectProvince")', { nationalID: nationalID }, function (list) {
                    province.empty();
