@model Website.Areas.Administrator.Models.User.CreateUserModel
@{
    ViewBag.Title = "Thêm Mới Người Dùng";
    Layout = "~/Areas/Administrator/Views/Shared/_Layout.cshtml";
}
@using (Html.BeginForm("Create", "User"))
{    
    <div class="box">
        <div class="heading">
            <h1>
                <img alt="" src="/Content/Administrator/Images/category.png">
                Thêm Mới Nhóm Người Dùng</h1>
            <div class="buttons">
                <input type="submit" value="+ Thêm Mới Người Dùng" class="t-button" />
                @Html.ActionLink("Danh Sách Người Dùng", "Index", null, new { @class = "t-button" })
            </div>
        </div>
        <div class="content">
            <div style="display: inline-block; width: 100%; margin-bottom: 15px; margin-top: 15px;
                clear: both;">
                <table border="0" cellpadding="0" cellspacing="0" width="100%" class="box_into">
                    <tr>
                        <td align="right" style="width: 20%" class="input_label">
                            @Html.LabelFor(u => u.RoleID)<span class="star">(*)</span>
                        </td>
                        <td width="80%" align="left" class="input_textbox">
                            @Html.DropDownListFor(u => u.RoleID, Model.Role, "[ --- Chọn Tên Nhóm --- ]")
                        </td>
                    </tr>
                    <tr>
                        <td align="right" style="width: 20%" class="input_label">
                            @Html.LabelFor(u => u.Email)<span class="star">(*)</span>
                        </td>
                        <td width="80%" align="left" class="input_textbox">
                            @Html.TextBoxFor(u => u.Email)
                        </td>
                    </tr>
                    <tr>
                        <td align="right" style="width: 20%" class="input_label">
                            @Html.LabelFor(u => u.FullName)
                        </td>
                        <td width="80%" align="left" class="input_textbox">
                            @Html.TextBoxFor(u => u.FullName)
                        </td>
                    </tr>
                    <tr>
                        <td align="right" style="width: 20%" class="input_label">
                            @Html.LabelFor(u => u.Phone)
                        </td>
                        <td width="80%" align="left" class="input_textbox">
                            @Html.TextBoxFor(u => u.Phone)
                        </td>
                    </tr>
                    <tr>
                        <td align="right" style="width: 20%" class="input_label">
                            @Html.LabelFor(u => u.Password)<span class="star">(*)</span>
                        </td>
                        <td width="80%" align="left" class="input_textbox">
                            @Html.PasswordFor(u => u.Password)
                        </td>
                    </tr>
                    <tr>
                        <td align="right" style="width: 20%" class="input_label">
                            @Html.LabelFor(u => u.ConfirmPassword)<span class="star">(*)</span>
                        </td>
                        <td width="80%" align="left" class="input_textbox">
                            @Html.PasswordFor(u => u.ConfirmPassword)
                        </td>
                    </tr>
                    <tr>
                        <td align="right" style="width: 20%" class="input_label">
                            @Html.LabelFor(u => u.IsActive)
                        </td>
                        <td width="80%" align="left" class="input_textbox">
                            @Html.CheckBoxFor(u => u.IsActive)
                        </td>
                    </tr>
                </table>
                @Html.ValidationSummary(false)
            </div>
        </div>
    </div>
}
