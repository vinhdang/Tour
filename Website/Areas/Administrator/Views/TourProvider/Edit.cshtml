@using Domain
@model Website.Areas.Administrator.Models.TourProvider.TourProviderModel
@{
    ViewBag.Title = "Quản Lý >> Sửa Nhà Cung Cấp Tour";
    Layout = "~/Areas/Administrator/Views/Shared/_Layout.cshtml";
    var national = ViewData["National"] == null ? new List<National>() : (List<National>)ViewData["National"];
    var province = ViewData["Province"] == null ? new List<Province>() : (List<Province>)ViewData["Province"]; 
} 
       
<script src="@Url.Content("~/Scripts/sys-tour-provider.js")" type="text/javascript"></script>       

<script type="text/javascript">
    $(document).ready(function () {
        $('select[name="NationalID"]').val('@Model.NationalID');
        $('select[name="ProvinceID"]').val('@Model.ProvinceID');

        sys.ad.tourprovider.edit.initPage();
    });
</script>

@using (Html.BeginForm("Edit", "TourProvider", FormMethod.Post, new { enctype = "multipart/form-data" }))
{ 
    <div class="box">
        <div class="heading">
            <h1>
                <img alt="" src="/Content/Administrator/Images/category.png">
                Quản Lý >> Sửa Nhà Cung Cấp Tour</h1>
            <div class="buttons">
                <input type="submit" value="Sửa NCC Tour" class="t-button" />
                @Html.ActionLink("Danh Sách NCC Tour", "Index", null, new { @class = "t-button" })
            </div>
        </div>
        <div class="content">
            <div style="display: inline-block; width: 100%; margin-bottom: 15px; margin-top: 15px;
                clear: both;">
                <table border="0" cellpadding="0" cellspacing="0" width="100%" class="box_into">
                    <tr>
                        <td align="right" style="width: 20%" class="input_label">
                            @Html.LabelFor(r => r.Name)<span class="star">(*)</span>
                        </td>
                        <td width="80%" align="left" class="input_textbox">
                            @Html.TextBoxFor(r => r.Name)
                        </td>
                    </tr>
                    <tr>
                        <td align="right" style="width: 20%" class="input_label">
                            @Html.LabelFor(r => r.Description)
                        </td>
                        <td width="80%" align="left" class="input_textbox">
                            @Html.TextAreaFor(r => r.Description)
                        </td>
                    </tr>
                    <tr>
                        <td align="right" style="width: 20%" class="input_label">
                            @Html.LabelFor(r => r.Address)
                        </td>
                        <td width="80%" align="left" class="input_textbox">
                            @Html.TextAreaFor(r => r.Address)
                        </td>
                    </tr>
                    <tr>
                        <td align="right" style="width: 20%" class="input_label">
                            <label>Quốc gia</label>
                        </td>
                        <td width="80%" align="left" class="input_textbox">
                            <select name="NationalID">
                                @foreach(var item in national)
                                {
                                    <option value="@item.ID">@item.Name</option>
                                }
                            </select>
                        </td>
                    </tr>
                    <tr>
                        <td align="right" style="width: 20%" class="input_label">
                            <label>Tỉnh/TP</label>
                        </td>
                        <td width="80%" align="left" class="input_textbox">
                            <select name="ProvinceID">
                                @foreach (var item in province)
                                {
                                    <option value="@item.ID">@item.Name</option>
                                }
                            </select>
                        </td>
                    </tr>
                    <tr>
                        <td align="right" style="width: 20%" class="input_label">
                            @Html.LabelFor(r => r.Email)
                        </td>
                        <td width="80%" align="left" class="input_textbox">
                            @Html.TextBoxFor(r => r.Email)
                        </td>
                    </tr> 
                    <tr>
                        <td align="right" style="width: 20%" class="input_label">
                            @Html.LabelFor(r => r.PhoneNumber)
                        </td>
                        <td width="80%" align="left" class="input_textbox">
                            @Html.TextBoxFor(r => r.PhoneNumber)
                        </td>
                    </tr>
                    <tr>
                        <td align="right" style="width: 20%" class="input_label">
                            @Html.LabelFor(r => r.Fax)
                        </td>
                        <td width="80%" align="left" class="input_textbox">
                            @Html.TextBoxFor(r => r.Fax)
                        </td>
                    </tr> 
                    <tr>
                        <td align="right" style="width: 20%" class="input_label">
                            @Html.LabelFor(r => r.Website)
                        </td>
                        <td width="80%" align="left" class="input_textbox">
                            @Html.TextBoxFor(r => r.Website)
                        </td>
                    </tr>
                    <tr>
                        <td align="right" style="width: 20%" class="input_label">
                            @Html.LabelFor(r => r.IsActive)
                        </td>
                        <td width="80%" align="left" class="input_textbox">
                            @Html.CheckBoxFor(r => r.IsActive)
                        </td>
                    </tr>
                    <tr>
                        <td align="right" style="width: 20%" class="input_label">
                            Hình đại diện
                        </td>
                        <td width="80%" align="left" class="input_textbox">
                            @Html.TextBoxFor(r => r.File, new { @type = "file" })
                        </td>
                    </tr>
                </table>
                @Html.ValidationSummary(false)
            </div>
        </div>
    </div>

}
