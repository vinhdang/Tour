@model Website.Areas.Administrator.Models.Social.EditSocialModel
@{
    ViewBag.Title = "Quản Lý >> Sửa Liên Kết Mạng Xã Hội";
    Layout = "~/Areas/Administrator/Views/Shared/_Layout.cshtml";
}
@using (Html.BeginForm("Edit", "Social", FormMethod.Post, new { enctype = "multipart/form-data" }))
{ 
    <div class="box">
        <div class="heading">
            <h1>
                <img alt="" src="/Content/Administrator/Images/category.png">
                Quản Lý >> Sửa Liên Kết Mạng Xã Hội</h1>
            <div class="buttons">
                <input type="submit" value="Lưu Thay Đổi" class="t-button" />
                @Html.ActionLink("Danh Sách Liên Kết Mạng Xã Hội", "Index", null, new { @class = "t-button" })
            </div>
        </div>
        <div class="content">
            <div style="display: inline-block; width: 100%; margin-bottom: 15px; margin-top: 15px;
                clear: both;">
                <table border="0" cellpadding="0" cellspacing="0" width="100%" class="box_into">
                    <tr>
                        <td align="right" style="width: 20%" class="input_label">
                            @Html.LabelFor(r => r.Name)<span class="star">(*)</span>
                        </td>
                        <td width="80%" align="left" class="input_textbox">
                            @Html.TextBoxFor(r => r.Name)
                        </td>
                    </tr>
                    <tr>
                        <td align="right" style="width: 20%" class="input_label">
                            @Html.LabelFor(r => r.Link)<span class="star">(*)</span>
                        </td>
                        <td width="80%" align="left" class="input_textbox">
                            @Html.TextBoxFor(r => r.Link)
                        </td>
                    </tr>
                    <tr>
                        <td align="right" style="width: 20%" class="input_label">
                            @Html.LabelFor(r => r.Description)
                        </td>
                        <td width="80%" align="left" class="input_textbox">
                            @Html.TextAreaFor(r => r.Description)
                        </td>
                    </tr>
                    @if (!string.IsNullOrEmpty(Model.FilePath))
                    {
                        <tr>
                            <td align="right" style="width: 20%" class="input_label">
                                Icon hiện tại
                            </td>
                            <td width="80%" align="left" class="input_textbox">
                                <img src="@Service.Helpers.FileHelper.GetSocial_Picture(Model.FilePath, Model.SocialID)" width="100px" />
                            </td>
                        </tr>
                        <tr>
                            <td align="right" style="width: 20%" class="input_label">
                                Chọn Icon mới
                            </td>
                            <td width="80%" align="left" class="input_textbox">
                                @Html.TextBoxFor(u => u.File, new { @type = "file" })
                            </td>
                        </tr>
                    }
                    <tr>
                        <td align="right" style="width: 20%" class="input_label">
                            @Html.LabelFor(r => r.Order)
                        </td>
                        <td width="80%" align="left" class="input_textbox">
                            @Html.TextBoxFor(r => r.Order, new { @class = "numerictextBox" })
                        </td>
                    </tr>
                    <tr>
                        <td align="right" style="width: 20%" class="input_label">
                            @Html.LabelFor(r => r.IsActive)
                        </td>
                        <td width="80%" align="left" class="input_textbox">
                            @Html.CheckBoxFor(r => r.IsActive)
                        </td>
                    </tr>
                </table>
                @Html.ValidationSummary(false)
            </div>
        </div>
    </div>
  
    
}
