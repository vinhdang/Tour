@using Service.Helpers
@using Domain
@model List<Category>
@if (Model != null && Model.Count > 0)
{
    <div class="footerItems">
        <h1>
            Về Vietrip</h1>
        <ul>
            @foreach (Category item in Model)
            {
                <li><a href="@item.Url" title="@item.Name">@item.Name</a></li>
            
            }
        </ul>
    </div>
}