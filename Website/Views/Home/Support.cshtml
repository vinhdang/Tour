@using Domain;
@{ 
    List<Support> lstPhone = ViewBag.Phone as List<Support>;
    List<Support> lstYahoo = ViewBag.Yahoo as List<Support>;
    List<Support> lstEmail = ViewBag.Email as List<Support>;
    List<Support> lstSkype = ViewBag.Skype as List<Support>;
}
<div class="footerSocial">
    <h2>
        Hỗ trợ trực tuyến</h2>
    @if (lstYahoo != null && lstYahoo.Count > 0)
    {

        for (int i = 0; i < lstYahoo.Count; i++)
        {
            if (i == lstYahoo.Count - 1)
            {
        <a href="ymsgr:sendim?@lstYahoo[i].Value">
            <img src="/images/icon_yahoo.png" alt="" title="" />@lstYahoo[i].Value</a>
            }
            else
            {
        <a href="ymsgr:sendim?@lstYahoo[i].Value">
            <img src="/images/icon_yahoo.png" alt="" title="" />@lstYahoo[i].Value</a>@Html.Raw(" | ")
            }
        }
    }
    @if (lstSkype != null && lstSkype.Count > 0)
    {

        for (int i = 0; i < lstSkype.Count; i++)
        {
            if (i == lstSkype.Count - 1)
            {
        <a href="skype:@lstSkype[i].Value?call">
            @Html.Raw(" | ")
            <img src="/images/icon_skype.png" alt="" title="" />@lstSkype[i].Value</a>
            }
            else
            {
        <a href="skype:@lstSkype[i].Value?call">
           @Html.Raw(" | ") <img src="/images/icon_skype.png" alt="" title="" />@lstSkype[i].Value</a>
            }
        }
    }
    @if (lstPhone != null && lstPhone.Count > 0)
    {
        string str = "";
        <h4>
            Tel:<span>
                @for (int i = 0; i < lstPhone.Count; i++)
                {
                    if (i == lstPhone.Count - 1)
                    {
                        str += lstPhone[i].Value;
                    }
                    else
                    {
                        str += lstPhone[i].Value + " - ";
                    }

                }
                @Html.Raw(str)
            </span>
        </h4>
    }
    @if (lstEmail != null && lstEmail.Count > 0)
    {
        <h4>
            Email: <span>
                @for (int i = 0; i < lstEmail.Count; i++)
                {
                    if (i == lstEmail.Count - 1)
                    { 
                    <a href="mailto:@lstEmail[i].Value">@lstEmail[i].Value</a> 
                    }
                    else
                    { 
                    <a href="mailto:@lstEmail[i].Value">@lstEmail[i].Value</a> @Html.Raw(" - ")
                    }
                }
            </span>
        </h4>
    }
     @* @{Html.RenderAction("Home", "Social");}*@
    
</div>
