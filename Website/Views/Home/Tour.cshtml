@using Service.Helpers
@model List<Domain.Province>
@{
    var tours = Model ?? null;
    var tour1 = (tours != null && tours.Count > 3) ? tours.GetRange(0, 3) : tours;
}           

<div class="container">
    @if (tours != null && tours.Count > 0)
    {
        var length = tours.Count > 3 ? 3 : tours.Count;
        foreach (var tour in tour1)
        {
            <div class="col-md-4">
                <div class="boxshadow center">
                    <a href="@tour.Url"><img src="@tour.Avartar" alt="@tour.Name" class="fwimg" style="height: 196px"/></a>
                    <div class="bscontainer">
                        <h4 class="bold caps"><a rel="canonical" href="@tour.Url" style="font-weight: bold;">@tour.PageTitle</a></h4>
                        @*<hr>*@
                        @*<p class="textleft grey">@tour.Description</p>
                        <form action="@tour.Url">
                            <button class="roundbtn" type="submit">Xem</button>
                        </form>*@
                    </div>
                </div>
            </div>
        }
    }	
</div>
