@using Domain.Entities;
@using Service.Helpers;
@model Website.Models.District.DistrictsModel
@if (Model != null && Model.DistrictList != null && Model.DistrictList.Count > 0)
{
    using (Html.BeginForm("Districts", "District", new { p = Model.ProvinceID, a = Model.AreaID, c = Model.ComfortID, ht = Model.HotelThemeID, type = Model.HotelTypeID, hp = Model.HotelPromotion, fd = Model.FromDate, td = Model.ToDate, nr = Model.NumberRoom, ng=Model.NumberGuest }, FormMethod.Post, new { id = "District" }))
    {
    <div class="district_list">
        <div class="district_list_title">
            <span>Quận / Huyện</span>
        </div>
        <div class="district_list_content">
            <table border="0" cellpadding="0" cellspacing="0">
                @foreach (Domain.Entities.District item in Model.DistrictList)
                {  
                    <tr>
                        <td style="padding-right: 10px; padding-top: 6px;">
                            @if (Model.ListDistrictID != null && Model.ListDistrictID.Length > 0 && Model.ListDistrictID.Contains(item.DistrictID.ToString()))
                            {
                                <input type="checkbox" id="DistrictID" name="DistrictID" value="@item.DistrictID" checked="checked" />
                            }
                            else
                            {
                                <input type="checkbox" value="@item.DistrictID" id="DistrictID" name="DistrictID" />
                            }
                        </td>
                        <td>
                            <label style="color: #0A84C1;">@item.Name</label>
                        </td>
                    </tr>
                }
            </table>
            <script type="text/javascript">
                $(":checkbox[name='DistrictID']").click(function () {
                    $("#District").submit();
                });
            </script>
        </div>
    </div>
    }
}