@using Domain.Entities;
@using Service.Helpers;
@model List<Category> 
<div style="height: 140px; width: 235px; margin-left: 10px; float: left; padding-bottom: 15px;
    padding-left: 5px;">
    <h5 style="border-bottom: 1px solid #e2eff8; color: #0A84C1; font-size: 17px; padding-bottom: 2px;">
        Về Vietrip</h5>
    @if (Model != null && Model.Count > 0)
    {

        <ul class="menu_footer">
            @foreach (Category item in Model)
            {
                <li><a class="@{ Html.RenderAction("GetActiveMainMenu", "Category", new { CurrentCatID = item.CategoryID, id = Protector.String(ViewContext.RouteData.Values["id"]), newID = Protector.String(ViewContext.RouteData.Values["newID"]) }); }" id="@UrlHelp.getCategoryUrl(item.Url, item.Name, item.CategoryID).Replace("/", "")" href="@UrlHelp.getCategoryUrl(item.Url, item.Name, item.CategoryID)">
                    - @item.Name </a></li>
            }
        </ul>
    }
</div>
