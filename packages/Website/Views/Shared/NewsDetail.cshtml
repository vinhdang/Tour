@using Website.Helpers
@using Service.Helpers;
<!DOCTYPE html >
<html lang="vi">
<head>
    <title>@ViewBag.Title</title>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
    <meta content="text/css" http-equiv="Content-Style-Type" />
    <meta content="text/javascript" http-equiv="Content-Script-Type" />
    <meta content="@ViewBag.KeyWords" name="keywords" />
    <meta content="@ViewBag.Description" name="description" />
    <meta content="<a href='http://www.bongtai.com' class='Normal'>Copyright 2011-2012 by Thien Y Corporation </a> "
        name="COPYRIGHT" />
    <meta content="Thien Y" name="GENERATOR" />
    <meta content="Thien Y" name="AUTHOR" />
    <meta content="DOCUMENT" name="RESOURCE-TYPE" />
    <meta content="GLOBAL" name="DISTRIBUTION" />
    <meta http-equiv="content-language" content="vi" />
    <meta content="1 DAYS" name="REVISIT-AFTER" />
    <meta content="GENERAL" name="RATING" />
    <meta content="RevealTrans(Duration=0,Transition=1)" http-equiv="PAGE-ENTER" />
    <link href="@Url.Content("~/Content/FrontEnd/Site.css")" rel="stylesheet" type="text/css" />
    <script type="text/javascript" src="@Url.Content("~/Scripts/jquery-1.4.4.min.js")"></script>
    <script type="text/javascript" src="@Url.Content("~/Scripts/Utils.js")"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.unobtrusive-ajax.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/MicrosoftAjax.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/MicrosoftMvcAjax.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/MicrosoftMvcValidation.js")" type="text/javascript"></script>
       @{ Html.RenderAction("GoogleAnalytics", "Config"); }
</head>
<body>
    <h1 style="display: none;">
        @ViewBag.Title
    </h1>
    <div id="wrapper">
        <div id="header">
            <div class="header-body">
                <div class="logo">
                    @{ Html.RenderAction("Logo", "Config"); }
                </div>
                <div class="menu">
                     @{ Html.RenderAction("GetOnlineSupport", "Support"); }
                    @{ Html.RenderAction("RenderMainMenu", "Category"); }
                </div>
            </div>
        </div>
        <div class="main">
            <div class="body-inner">
                <div class="body-inner-content">
                    @{ Html.RenderAction("BreadCrumb", "Category", new { id = Protector.String(ViewContext.RouteData.Values["id"]), newID = Protector.String(ViewContext.RouteData.Values["newID"]) }); }
                    <div class="category-left">
                        @{ Html.RenderAction("LeftMenu", "Category"); }
                        @{ Html.RenderAction("LeftBanner", "Banner"); }
                    </div>
                    <div class="category-content">
                        <div class="category-content-picture">
                            @{ Html.RenderAction("LoadPictureByCategoryID", "CategoryPicture"); }
                        </div>
                        @RenderBody()
                    </div>
                </div>
                <div class="footer">
                    @{ Html.RenderAction("Copyright", "Config"); }
                    @{ Html.RenderAction("RenderFooterMenu", "Category"); }
                </div>
            </div>
        </div>
    </div>
</body>
</html>
