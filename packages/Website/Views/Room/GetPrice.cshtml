@using Domain.Entities;
@using Service.Helpers;
@model Website.Models.Room.CreateGetPriceModel
@using (Html.BeginForm("GetPrice", "Room", new { h = Model.hotelID, r = Model.roomID, fd = Model.fromdate, td = Model.todate }, FormMethod.Post))
{
    <style>
        .form
        {
            margin: 10px 0px 0px 20px;
            padding: 0px;
        }
        .form tr td.text
        {
            padding: 3px 15px 3px 0px;
            margin: 4px 0px 4px 0px;
            text-align: right;
        }
        .form tr td.input
        {
            padding: 3px 15px 3px 0px;
            margin: 4px 0px 4px 0px;
        }
        .form tr td.input input[type="text"]
        {
            border: 1px solid #BDC8CD;
            -moz-border-radius: 3px 3px 3px 3px;
            padding: 3px 3px 3px 3px;
            border-radius: 3px;
            width: 330px;
        }
        .form tr td.input input[type="submit"]
        {
        }
        .form tr td.input textarea
        {
            border: 1px solid #BDC8CD;
            -moz-border-radius: 3px 3px 3px 3px;
            padding: 3px 3px 3px 3px;
            border-radius: 3px;
            width: 420px;
        }
        .input-validation-error
        {
            border: 1px solid #DD3C10 !important;
            -moz-border-radius: 3px 3px 3px 3px;
            border-radius: 3px;
            margin: 0px;
        }
        .validation-summary-errors
        {
            margin: 20px 0px 20px 0px;
            padding: 10px 10px 10px 20px;
            background-color: #FFEBE8;
            border: 1px solid #DD3C10;
            border-radius: 3px;
            -moz-border-radius: 3px 3px 3px 3px;
        }
        .validation-summary-valid
        {
            display: none;
        }
        .thank_you
        {
            margin: 20px 0px 20px 0px;
            padding: 10px 10px 10px 20px;
            border: 1px solid #0095DA;
            border-radius: 3px;
            -moz-border-radius: 3px 3px 3px 3px;
            text-align: center;
        }
        .button_input
        {
            border: 1px solid #60AFD7;
            border-radius: 3px 3px 3px 3px;
            color: #0A84C1;
            font-size: 14px;
            margin-left: 20px;
            padding: 3px 5px 4px;
        }
        ul
        {
            list-style-type: none;
            margin: 0;
            padding: 0;
        }
        .captcha_input
        {
            border: 1px solid #BDC8CD;
            -moz-border-radius: 3px 3px 3px 3px;
            padding: 3px 3px 3px 3px;
            border-radius: 3px;
            width: 150px !important;
        }
    </style>
    <link rel="stylesheet" href="http://code.jquery.com/ui/1.9.0/themes/base/jquery-ui.css" />
    <script src="http://code.jquery.com/jquery-1.8.2.js"></script>
    <script src="http://code.jquery.com/ui/1.9.0/jquery-ui.js"></script>
    <script src="@Url.Content("~/Scripts/jquery.colorbox-min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.unobtrusive-ajax.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/MicrosoftAjax.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/MicrosoftMvcAjax.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/MicrosoftMvcValidation.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.raty.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.formatCurrency-1.4.0.js")" type="text/javascript"></script>
    <br />
   
    <table border="0" class="form" cellpadding="0" cellspacing="0">
        <tr>
            <td class="text">
            </td>
            <td class="input">
                <strong>@Html.LabelFor(t => t.Email)</strong> <span style="font-size: 11px; color: Red;">
                    (*)</span> :
            </td>
        </tr>
        <tr>
            <td class="text">
            </td>
            <td class="input">
                @Html.TextBoxFor(t => t.Email)
                @*   <div style="color: Red;">
                    @Html.ValidationMessageFor(o => o.Email)</div>*@
            </td>
        </tr>
        <tr>
            <td class="text">
            </td>
            <td class="input">
                <strong>@Html.LabelFor(t => t.Phone)</strong> <span style="font-size: 11px; color: Red;">
                    (*)</span> :
            </td>
        </tr>
        <tr>
            <td class="text">
            </td>
            <td class="input">
                @Html.TextBoxFor(t => t.Phone)
                @*<div style="color: Red;">@Html.ValidationMessageFor(o => o.Phone)
                </div>*@
            </td>
        </tr>
        <tr>
            <td class="text">
            </td>
            <td class="input">
                @Html.Partial("_Captcha", new Website.Models.Captcha.Captcha())
                @Html.Partial("_InvisibleCaptcha", new Website.Models.Captcha.InvisibleCaptcha())
            </td>
        </tr>
        <tr>
            <td class="text">
            </td>
            <td class="input">
            </td>
        </tr>
        <tr>
            <td class="text">
            </td>
            <td class="input">
                <input type="submit" value="Gửi" class="button_input">
            </td>
        </tr>
        <tr>
            <td class="text">
            </td>
            <td class="input">
                @Html.ValidationSummary(false)
            </td>
        </tr>
    </table>
}