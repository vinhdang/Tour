@using Domain.Entities;
@using Service.Helpers;
@model Website.Models.Room.MyRoom 
@if (Model != null)
{

    <tr>
        <td style="border: solid 1px #c2c2c2; border-top: 0px; border-right: 0px;">
            @Model.Name
        </td>
        <td style="border: solid 1px #c2c2c2; border-top: 0px; border-right: 0px;">
            @Model.Quantity
        </td>
        <td style="border: solid 1px #c2c2c2; border-top: 0px; border-right: 0px;">
            @String.Format("{0:dd/MM/yyyy}", Model.FromDate)
        </td>
        <td style="border: solid 1px #c2c2c2; border-top: 0px; border-right: 0px;">
            @String.Format("{0:dd/MM/yyyy}", Model.ToDate)
        </td>
        <td style="border: solid 1px #c2c2c2; border-top: 0px; border-right: 0px;">
            @String.Format("{0:#,###}", Model.NumberNight)
        </td>
        <td style="border: solid 1px #c2c2c2; border-top: 0px; border-right: 0px;">
            @String.Format("{0:#,###}", Model.Price)
        </td>
        <td style="border: solid 1px #c2c2c2; border-top: 0px; border-right: 0px;">
            @String.Format("{0:#,###}", Model.VATPrice)
        </td>
        <td style="border: solid 1px #c2c2c2; border-top: 0px;">
            @String.Format("{0:#,###}", Model.TotalPrice)
        </td>
    </tr>
}
