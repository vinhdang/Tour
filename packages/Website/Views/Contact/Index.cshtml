@using Service.Helpers
@using Domain.Entities
@model Website.Models.Contact.ContactModel
@{
    Layout = "~/Views/Shared/Contact.cshtml";
}
@using (Html.BeginForm("Index", "Contact", FormMethod.Post))
{ 
      
    <div class="contact">
        <div class="contact-info">
          
        </div>
        <div class="contact-form">
            <table border="0" class="form" cellpadding="0" cellspacing="0" width="100%">
                <tr>
                    <td colspan="2">
                        <div class="contact-note">
                            @Model.Category.Name
                        </div>
                    </td>
                </tr>
                <tr>
                    <td class="text">
                        Họ tên:
                    </td>
                    <td class="input">
                        @Html.TextBoxFor(t => t.FullName)
                    </td>
                </tr>
                <tr>
                    <td class="text">
                        Email:
                    </td>
                    <td class="input">
                        @Html.TextBoxFor(t => t.Email)
                    </td>
                </tr>
                <tr>
                    <td class="text">
                        Điện thoại:
                    </td>
                    <td class="input">
                        @Html.TextBoxFor(t => t.Phone)
                    </td>
                </tr>
                <tr>
                    <td class="text">
                        Địa chỉ:
                    </td>
                    <td class="input">
                        @Html.TextBoxFor(t => t.Address)
                    </td>
                </tr>
                <tr>
                    <td class="text">
                        Nội dung:
                    </td>
                    <td class="input">
                        @Html.TextAreaFor(t => t.Content, new { @cols = "20", @rows = "6" })
                    </td>
                </tr>
                <tr>
                    <td class="input" style="height: 10px;">
                    </td>
                </tr>
                <tr>
                    <td class="text">
                    </td>
                    <td class="input">
                        <input type="image" src="/Content/FrontEnd/images/contact_button.jpg" />
                    </td>
                </tr>
            </table>
        </div>
    </div>
         
}
