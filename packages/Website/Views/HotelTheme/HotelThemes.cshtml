@using Domain.Entities;
@using Service.Helpers;
@model Website.Models.HotelTheme.HotelThemeModel
@if (Model != null && Model.HotelThemeList != null && Model.HotelThemeList.Count > 0)
{
    using (Html.BeginForm("HotelThemes", "HotelTheme", new { p = Model.ProvinceID, d = Model.DistrictID, a = Model.AreaID, c = Model.ComfortID, type = Model.HotelTypeID, hp = Model.HotelPromotion, fd = Model.FromDate, td = Model.ToDate, nr = Model.NumberRoom, ng = Model.NumberGuest }, FormMethod.Post, new { id = "HotelThemeID" }))
    {
    <div class="district_list">
        <div class="district_list_title">
            <span>Chuỗi Khách Sạn</span>
        </div>
        <div class="district_list_content">
            <table border="0" cellpadding="0" cellspacing="0">
                @foreach (Domain.Entities.HotelTheme item in Model.HotelThemeList)
                {  
                    <tr>
                        <td style="padding-right: 10px; padding-top: 6px;">
                            @if (Model.ListHotelThemeID != null && Model.ListHotelThemeID.Length > 0 && Model.ListHotelThemeID.Contains(item.HotelThemeID.ToString()))
                            {
                                <input type="checkbox" id="HotelThemeID" name="HotelThemeID" value="@item.HotelThemeID" checked="checked" />
                            }
                            else
                            {
                                <input type="checkbox" value="@item.HotelThemeID" id="HotelThemeID" name="HotelThemeID" />
                            }
                        </td>
                        <td>
                            <label style="color: #0A84C1;">@item.Name</label>
                        </td>
                    </tr>
                }
            </table>
            <script type="text/javascript">
                $(":checkbox[name='HotelThemeID']").click(function () {
                    $("#HotelThemeID").submit();
                });
            </script>
        </div>
    </div>
    }
}