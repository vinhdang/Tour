@model Website.Areas.Administrator.Models.Room.CreateRoomModel
@{
    ViewBag.Title = "Sửa Phòng";
    Layout = "~/Areas/Administrator/Views/Shared/_Layout.cshtml"; }
<div class="uiHeader mhl">
    <h2 class="uiHeaderTitle">
        Sửa Phòng <span style="color: Red">@Model.Hotel.Name</span>
    </h2>
</div>
<div class="pal grayArea uiBoxGray noborder">
    <div id="RoomList">
        @Html.Partial("RoomList", Model.Rooms)
    </div>
    @using (Html.BeginForm("Edit", "Room", FormMethod.Post, new { enctype = "multipart/form-data" }))
    { 
        <table class="uiInfoTable" cellpadding="2" cellspacing="0">
            <tr class="spacer">
                <td colspan="3">
                    <hr />
                </td>
            </tr>
            <tr class="dataRow">
                <td class="label">
                    @Html.LabelFor(r => r.HotelID)
                </td>
                <td class="dot">
                    :
                </td>
                <td class="data">
                    @Html.TextBoxFor(r => r.Hotel.Name, new { @disabled = "disabled" })
                </td>
            </tr>
            <tr class="dataRow">
                <td class="label">
                    @Html.LabelFor(r => r.Name)<span class="star">(*)</span>
                </td>
                <td class="dot">
                    :
                </td>
                <td class="data">
                    @Html.TextBoxFor(r => r.Name)
                </td>
            </tr>
            <tr class="dataRow">
                <td class="label">
                    @Html.LabelFor(r => r.Description)
                </td>
                <td class="dot">
                    :
                </td>
                <td class="data">
                    @Html.TextAreaFor(r => r.Description)
                </td>
            </tr>
            <tr class="dataRow">
                <td class="label">
                    @Html.LabelFor(r => r.Order)
                </td>
                <td class="dot">
                    :
                </td>
                <td class="data">
                    @Html.TextBoxFor(r => r.Order, new { @class = "numerictextBox" })
                </td>
            </tr>
            <tr class="dataRow">
                <td class="label">
                    @Html.LabelFor(r => r.NumberGuest)
                </td>
                <td class="dot">
                    :
                </td>
                <td class="data">
                    @Html.TextBoxFor(r => r.NumberGuest, new { @class = "numerictextBox" })
                </td>
            </tr>
            <tr class="dataRow">
                <td class="label">
                    @Html.LabelFor(r => r.IsContact)
                </td>
                <td class="dot">
                    :
                </td>
                <td class="data">
                    @Html.CheckBoxFor(r => r.IsContact)
                </td>
            </tr>
            <tr class="dataRow">
                <td class="label">
                    @Html.LabelFor(r => r.IsActive)
                </td>
                <td class="dot">
                    :
                </td>
                <td class="data">
                    @Html.CheckBoxFor(r => r.IsActive)
                </td>
            </tr>
            <tr class="spacer">
                <td colspan="3">
                    <hr />
                </td>
            </tr>
            <tr class="dataRow">
                <td class="label">
                </td>
                <td class="button" colspan="2">
                    <input type="submit" value="Lưu Thay Đổi" class="t-button" />
                    @Html.ActionLink("+ Thêm Mới Loại Phòng", "Create", "Room", new { id = Model.Hotel.HotelID }, new { @class = "t-button" })
                    @Html.ActionLink("Danh Sách Khách Sạn", "Index", "Hotel", null, new { @class = "t-button" })
                </td>
            </tr>
        </table>
        @Html.ValidationSummary(false)
    }
</div>
