@model Website.Areas.Administrator.Models.HotelPicture.EditHotelPictureModel 
@{
    ViewBag.Title = "Sửa Ảnh";
    Layout = "~/Areas/Administrator/Views/Shared/_Layout.cshtml"; }
<div class="uiHeader mhl">
    <h2 class="uiHeaderTitle">
        Sửa Ảnh <span style="color: Red">@Model.Hotel.Name</span>
    </h2>
</div>
<div class="pal grayArea uiBoxGray noborder">
    <div id="HotelPictureList">
        @Html.Partial("HotelPictureList", Model.HotelPictures)
    </div>
    @using (Html.BeginForm("Edit", "HotelPicture", FormMethod.Post, new { enctype = "multipart/form-data" }))
    { 
        <table class="uiInfoTable" cellpadding="2" cellspacing="0">
            <tr class="spacer">
                <td colspan="3">
                    <hr />
                </td>
            </tr>
            <tr class="dataRow">
                <td class="label">
                    @Html.LabelFor(r => r.HotelID)
                </td>
                <td class="dot">
                    :
                </td>
                <td class="data">
                    @Html.TextBoxFor(r => r.Hotel.Name, new { @disabled = "disabled" })
                </td>
            </tr>
            <tr class="dataRow">
                <td class="label">
                    @Html.LabelFor(r => r.Alt)<span class="star">(*)</span>
                </td>
                <td class="dot">
                    :
                </td>
                <td class="data">
                    @Html.TextAreaFor(r => r.Alt)
                </td>
            </tr>
            <tr class="dataRow">
                <td class="label">
                    Tệp tin ảnh
                </td>
                <td class="dot">
                    :
                </td>
                <td class="data">
                    <a class="btn_search1"  href="@Service.Helpers.FileHelper.GetHotel_Picture(Service.Helpers.Protector.String(ViewBag.FilePath), (int)Model.Hotel.HotelID)" title="@Model.Alt">
                        <img src="@Service.Helpers.FileHelper.GetHotel_Picture(Service.Helpers.Protector.String(ViewBag.FilePath), (int)Model.Hotel.HotelID)" width="200px" />
                    </a>
                    <script type="text/javascript">
                        $(document).ready(function () {

                            $(".btn_search1").colorbox();

                        });</script>
                </td>
            </tr>
            <tr class="dataRow">
                <td class="label">
                    @Html.LabelFor(r => r.File)
                </td>
                <td class="dot">
                    :
                </td>
                <td class="data">
                    @Html.TextBoxFor(u => u.File, new { @type = "file" })
                </td>
            </tr>
            <tr class="dataRow">
                <td class="label">
                    @Html.LabelFor(r => r.Order)
                </td>
                <td class="dot">
                    :
                </td>
                <td class="data">
                    @Html.TextBoxFor(r => r.Order, new { @class = "numerictextBox" })
                </td>
            </tr>
            <tr class="dataRow">
                <td class="label">
                    @Html.LabelFor(r => r.IsAvartar)
                </td>
                <td class="dot">
                    :
                </td>
                <td class="data">
                    @Html.CheckBoxFor(r => r.IsAvartar)
                </td>
            </tr>
            <tr class="dataRow">
                <td class="label">
                    @Html.LabelFor(r => r.IsActive)
                </td>
                <td class="dot">
                    :
                </td>
                <td class="data">
                    @Html.CheckBoxFor(r => r.IsActive)
                </td>
            </tr>
            <tr class="spacer">
                <td colspan="3">
                    <hr />
                </td>
            </tr>
            <tr class="dataRow">
                <td class="label">
                </td>
                <td class="button" colspan="2">
                    <input type="submit" value="Lưu Thay Đổi" class="t-button" />
                    @Html.ActionLink("+ Thêm mới hình ảnh", "Create", "HotelPictures", new { id = Model.Hotel.HotelID }, new { @class = "t-button" })
                </td>
            </tr>
        </table>
        @Html.ValidationSummary(false)
    }
</div>
